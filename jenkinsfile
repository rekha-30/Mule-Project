pipeline {
    agent any 
    stages {
        stage(' Build') {

            steps {
                echo 'Application is in building phase'
                bat 'mvn clean install'
            }
        }
        stage( 'Test') {

            steps {
                echo 'Application is in testing phase'
                bat 'mvn test'
            }
stage('Deploy to Cloudhub') {
    environment {
                ANYPOINT_CREDENTIALS = CREDENTIALS('platform.credentials')
                }

 

        steps {
                bat 'mvn package deploy -DmuleDeploy -DmuleVersion=4.4.0 -Dusername=rekha-kotu -Dpassword=Rekha@7013819532 -DworkerType=MICRO -Dworkers=1 -Dregion=us-east-2'
                }
        }
     }
}
